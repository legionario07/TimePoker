<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="timepoker.com.br.timepoker.MainActivity">

    <TextView
        android:id="@+id/txtTempo"
        android:text="00:00"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textSize="100sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

    <TextView
        android:id="@+id/txtNivelBlind"
        android:text="NÃ­vel 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>

    <TextView
        android:id="@+id/txtBlindAtual"
        android:text="50/100"
        android:gravity="center|top"
        android:textSize="45sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

    <ImageButton
        android:background="@color/colorBackground"
        android:id="@+id/btnPauseOrStart"
        android:src="@drawable/ic_play_circle_filled_black_96dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageButton
        android:background="@color/colorBackground"
        android:src="@drawable/if_mic_1055024_64"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>

</LinearLayout>
